<Application x:Class="WpfTests.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfTests"
             xmlns:vm="clr-namespace:WpfTests.ViewModels" 
             xmlns:commands="clr-namespace:MailSender.lib.Commands;assembly=MailSender.lib"
             xmlns:converters="clr-namespace:WpfTests.Infrastructure.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <vm:ViewModelLocator x:Key="Locator"/>
        <commands:CloseAppCommand x:Key="CloseAppCommand" />
        <converters:DebugConverter x:Key="DebugConverter" />
    </Application.Resources>
</Application>
 