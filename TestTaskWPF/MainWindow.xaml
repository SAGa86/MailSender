        <ProgressBar Margin="120,260,0,0" Name="ProgressInformer" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="380" Maximum="1"/>
        <TextBlock Name="PersentBlock" HorizontalAlignment="Left" Margin="540,260,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="24"  />
    </Grid>
</Window>
